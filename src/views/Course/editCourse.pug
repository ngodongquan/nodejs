html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/app.css", type='text/css')
  body
    form(method="POST" action=`/courses/${course._id}?_method=PUT`)
      div(class="form-group")
        label Enter Name
        input(type="text" value=`${course.name}` class="form-control" name="name" placeholder="Enter Name")
      div(class="form-group")
        label Enter start date
        input(type="text" value=`${course.startDate}` class="form-control" name="startDate" placeholder="Enter start date")
      div(class="form-group")
        label Enter end date
        input(type="text" value=`${course.endDate}` class="form-control" name="endDate" placeholder="Enter end date")
      button(type="submit"  class="btn btn-primary") Submit
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js") 